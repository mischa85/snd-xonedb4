	uint8_t					*usbTXBufferPCMandUARTAddr;
	OSSharedPtr<IOMemoryDescriptor>		usbTXBufferPCMandUARTSegment[32768];
	uint8_t					*usbTXBufferPCMandUARTSegmentAddr[32768];
